<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Number of hours worked"
            android:padding="10dp"
            android:layout_marginTop="4dp" />

        <EditText
            android:id="@+id/etRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="Hourly rate ($)"
            android:padding="10dp"
            android:layout_marginTop="8dp" />

        <Button
            android:id="@+id/btnCalculate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Calculate"
            android:layout_marginTop="14dp" />

        <!-- subtle divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="8dp"
            android:background="#E0E0E0" />

        <TextView
            android:id="@+id/tvPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay (regular): $0.00"
            android:textStyle="bold"
            android:typeface="monospace"
            android:paddingTop="6dp" />

        <TextView
            android:id="@+id/tvOvertime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Overtime pay: $0.00"
            android:typeface="monospace"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/tvGross"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total (gross): $0.00"
            android:textStyle="bold"
            android:typeface="monospace"
            android:paddingTop="6dp" />

        <TextView
            android:id="@+id/tvTax"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tax (18%): $0.00"
            android:typeface="monospace"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total (after tax): $0.00"
            android:textStyle="bold"
            android:typeface="monospace"
            android:paddingTop="6dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>
</ScrollView>
